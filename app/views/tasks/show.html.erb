<div class="task-show-page">
  <div class="task-details-container">
    <div class="task-card">
      <h2 class="task-title"><%= @task.name %></h2>

      <div class="task-info">
        <p><strong>Due Date:</strong> <span class="task-date"><%= @task.deadline %></span></p>
        <p><strong>Description:</strong></p>
        <p class="task-description"><%= @task.description %></p>
        <p><strong>Status:</strong> <span class="task-status <%= @task.status %>"><%= @task.status.capitalize %></span></p>
        
        <!-- Assigned User -->
        <p><strong>Assigned To:</strong> <span class="task-assigned-user"><%= @task.user.present? ? @task.user.email : 'No user assigned' %></span></p>
      </div>

      <div class="task-actions">
        <%= link_to "Back", tasks_path, class: "btn btn-secondary" %>
        <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary" %>
        <%= button_to "Delete", @task, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
