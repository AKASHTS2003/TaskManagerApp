<div class="auth-container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg p-4 rounded-3" style="max-width: 400px; width: 100%;">
    <h2 class="text-center fw-bold mb-4">Create Account</h2>
    <p class="text-center text-muted">Sign up to get started</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-envelope"></i></span>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
        </div>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <%= f.submit "Sign Up", class: "btn btn-success w-100" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <p class="text-muted">Already have an account? <%= link_to "Sign in", new_user_session_path, class: "fw-bold text-primary" %></p>
    </div>
  </div>
</div>
