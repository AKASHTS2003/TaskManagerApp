<div class="auth-container d-flex justify-content-center align-items-center vh-1000">
  <div class="card shadow-lg p-4 rounded-3" style="max-width: 400px; width: 100%;">
    <h2 class="text-center fw-bold mb-4">Forgot your password?</h2>
    <p class="text-center text-muted mb-4">Enter your email address and we'll send you instructions to reset your password.</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-envelope"></i></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email address" %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="d-grid gap-2 mb-3">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <!-- Links for signing in or signing up -->
    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>