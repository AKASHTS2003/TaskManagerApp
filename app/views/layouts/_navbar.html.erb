<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
  <div class="container-fluid">
    
    <!-- Navigation Icon + Brand Name -->
    <a class="navbar-brand fw-bold text-primary d-flex align-items-center" href="/">
      <i class="bi bi-list fs-4 me-2"></i> Task Manager
    </a>
    
    <!-- Toggle Button for Mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-between" id="navbarNav">

      <!-- Left-Aligned Calendar Icon Link -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to calendar_path, class: "nav-link d-flex align-items-center" do %>
            <i class="bi bi-calendar fs-5 me-1"></i> Calendar
          <% end %>
        </li>
      </ul>


      <!-- Right-Aligned Search Form -->
      <form class="d-flex ms-auto" action="<%= tasks_path %>" method="get">
        <input class="form-control me-2" type="search" name="query" placeholder="Search tasks..." value="<%= params[:query] %>">
        <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
      </form>

      <!-- Authentication Links -->
      <ul class="navbar-nav ms-3">
        <% if user_signed_in? %>
          <li class="nav-item">
            <span class="nav-link">Hello, <%= current_user.email %></span>
          </li>
          <li class="nav-item">
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</nav>
